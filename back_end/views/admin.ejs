<!doctype html>
<html>
   <head>
        <title>Admin Page</title>
        
        <meta charset="UTF-8">
        
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
        <link rel="stylesheet" href="http://yui.yahooapis.com/combo?pure/0.6.0/base-min.css&pure/0.6.0/grids-min.css&pure/0.6.0/grids-responsive-min.css">
        <style>
            section {
            
            }
            
            section div.inner {
                box-sizing: border-box;
                padding: 0 20px;
            }
            
            .playable-group,
            .creature-group {
                display: none;
            }
        </style>
    </head>
    <body>
        
        <section>
            <div class="inner pure-g">
                
                <div class="pure-u-1-1">
                    
                    <form class="pure-form pure-form-aligned" method="post" action="/admin/create">
                        <fieldset>
                            <div class="pure-control-group">
                                <label for="id">Hardware ID</label>
                                <input id="id" name="id" type="text" placeholder="AABBCCDDEE" required>
                            </div>

                            <div class="pure-control-group">
                                <label for="name">Card Name</label>
                                <input id="name" name="name" type="text" placeholder="Name" required>
                            </div>

                            <div class="pure-control-group">
                                <label for="colour">Card Colour</label>
                                <input id="colour" name="colour" type="text" placeholder="Colour" required>
                            </div>

                            <div class="pure-control-group">
                                <label for="type">Card Type</label>
                                <select id="type" name="type" required>
                                    <option value="land">Land</option>
                                    <option value="creature">Creature</option>
                                    <option value="spell">Spell</option>
                                </select>
                            </div>
                            
                            <div class="pure-control-group playable-group">
                                <label for="description">Card Description</label>
                                <input id="description" name="description" type="text" placeholder="Description" required>
                            </div>
                            
                            <div class="pure-control-group playable-group">
                                <label for="cost">Card Cost</label>
                                <input id="cost" name="cost" type="number" placeholder="Cost" required>
                            </div>                            
                            
                            <div class="pure-control-group creature-group">
                                <label for="attack">Creature Attack</label>
                                <input id="attack" name="attack" type="number" placeholder="Attack" required>
                            </div>
                            
                            <div class="pure-control-group creature-group">
                                <label for="defence">Creature Defence</label>
                                <input id="defence" name="defence" type="number" placeholder="Defence" required>
                            </div>
                            
                            <div class="pure-controls">
                                <button type="submit" class="pure-button pure-button-primary">Submit</button>
                            </div>
                        </fieldset>
                    </form>
                    
                </div>
                
            </div>
        </section>
        <script>
            ;( function( $, $$ ) {
                
                var dropdown = $.getElementById( 'type' );
                var playableGroupEls = $.querySelectorAll( '.playable-group' );
                var creatureGroupEls = $.querySelectorAll( '.creature-group' );
                
                dropdown.addEventListener( 'change', function() {
                    
                    if( this.value != 'land' )
                    {
                        [].forEach.call( playableGroupEls, function( group ) {
                            group.style.display = 'block';
                        } );
                        
                        if( this.value == 'creature' )
                        {
                            [].forEach.call( creatureGroupEls, function( group ) {
                                group.style.display = 'block';
                            } );
                        }
                        else
                        {
                            [].forEach.call( creatureGroupEls, function( group ) {
                                group.style.display = 'none';
                            } );
                        }
                    }
                    else
                    {
                        [].forEach.call( playableGroupEls, function( group ) {
                            group.style.display = 'none';
                        } );
                    }
                } );
                
            } )( document, window );
        </script>
    </body>
</html>